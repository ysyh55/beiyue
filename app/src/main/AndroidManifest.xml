<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.zheteng.cbreader">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MainApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:hardwareAccelerated="true">
        <activity
                android:theme="@style/AppTheme.NavDrawer"
                android:name=".ui.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.ReadActivity"
                android:label="@string/app_name"
                android:parentActivityName=".ui.MainActivity">
        </activity>

        <activity
                android:name=".ui.CommentActivity"
                android:label="@string/app_name"
                android:parentActivityName=".ui.ReadActivity">
        </activity>

        <activity
                android:name=".ui.SettingsActivity"
                android:label="@string/settings">
        </activity>
        <activity
                android:name=".ui.AboutActivity"
                android:label="@string/about">
            <intent-filter>
                <action android:name="me.zheteng.cbreader.ui.AboutActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <provider
                android:name=".data.CnBetaProvider"
                android:authorities="me.zheteng.cbreader"
                android:exported="false"
                android:syncable="true"/>
    </application>

</manifest>
