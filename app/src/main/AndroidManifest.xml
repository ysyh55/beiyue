<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
          package="me.zheteng.cbreader">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
            android:name=".MainApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_cbreader_launcher"
            tools:replace="android:icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:hardwareAccelerated="true">
        <activity
                android:name=".ui.MainActivity"
                android:launchMode="singleTask"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.ReadActivity"
                android:label="@string/app_name"
                android:parentActivityName=".ui.MainActivity">
        </activity>

        <activity
                android:name=".ui.CommentActivity"
                android:label="@string/app_name"
                android:parentActivityName=".ui.ReadActivity">
        </activity>

        <activity
                android:name=".ui.SettingsActivity"
                android:launchMode="singleTask"
                android:label="@string/settings">
        </activity>
        <activity
                android:name=".ui.AllTopicsActivity"
                android:label="@string/all_topics">
        </activity>
        <activity
                android:name=".ui.AboutActivity"
                android:launchMode="singleTask"
                android:label="@string/about">
            <intent-filter>
                <action android:name="me.zheteng.cbreader.ui.AboutActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
                  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
                  android:theme="@android:style/Theme.Translucent"/>

        <provider
                android:name=".data.CnBetaProvider"
                android:authorities="${applicationId}"
                android:exported="false"
                android:syncable="true"/>

        <service
                android:name="com.umeng.update.net.DownloadingService"
                android:process=":DownloadingService" >
        </service>
        <activity
                android:name="com.umeng.update.UpdateDialogActivity"
                android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <meta-data android:value="5513c2cffd98c5336c0001fd" android:name="UMENG_APPKEY"></meta-data>
        <meta-data android:value="${channel}" android:name="UMENG_CHANNEL"/>

        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version"/>
    </application>

</manifest>
