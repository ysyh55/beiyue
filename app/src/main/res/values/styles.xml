    <style name="AppThemeDark" parent="AppThemeDarkBase"></style>


    <style name="FeedListItemHeadlineReaded"
           parent="@style/Base.TextAppearance.AppCompat.Headline">
        <item name="android:color">@color/text_readed</item>
    </style>
    <style name="about_text" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="drawer_title_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="AppTheme.NavigationItem.TextAppear"
           parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu"/>

