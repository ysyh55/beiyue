        <item name="android:textColor">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="status_bar_color">@color/theme_primary_dark</item>
        <item name="main_text_color">@color/abc_primary_text_material_light</item>
        <item name="sub_text_color">@color/abc_secondary_text_material_light</item>
