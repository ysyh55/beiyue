<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="@dimen/comment_sub_floor_padding">
    <RelativeLayout
            android:id="@+id/show_sub_floor_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/sub_floor_unit"
                tools:text="楼"
                android:text="@string/floor"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
        <TextView
                android:id="@+id/sub_floor_num"
                tools:text="1"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/sub_floor_unit"/>
        <TextView
                android:id="@+id/sub_floor_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:textStyle="bold"
                android:textSize="@dimen/sub_floor_cotent_text_size"
                tools:text="匿名用户"
                android:singleLine="true"
                android:layout_toLeftOf="@id/sub_floor_num"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
        <TextView
                android:id="@+id/sub_floor_content"
                tools:text="叼炸天有没有"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/sub_floor_cotent_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_floor_username"/>

    </RelativeLayout>

    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/hide_sub_floor_content"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38.0dip">
        <TextView
                android:id="@+id/hide_text"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_hidden_comment"
                android:drawablePadding="10.0dip"
                android:layout_centerInParent="true"/>
        <ProgressBar
                android:id="@+id/hide_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/hide_text"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
</FrameLayout>
